rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Enforce user authentication for all requests
    match /{collection}/{document} {
      allow read, write: if request.auth != null;
    }

    // Restrict access to subcollections within user's collection
    match /{userUid} {
      allow read, write: if request.auth.uid == userUid;
    }

    // Admin documents - only readable by admins
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions can write admin records
    }
  }
}